
<h2>Edit Kpop</h2>


<div class="copy">

	<form action="/kpops/<%= @kpop.id %>" method="post">
		<p><input class="kpop_input" type="text" name="group_name" placeholder="Group Name" value="<%= @kpop.group_name %>"></p>
		<p><input class="kpop_input" type="text" name="num_members" placeholder="Number of members" value="<%= @kpop.num_members %>"></p>
		<p><input class="kpop_input" type="url" name="image" placeholder="Image URL" value="<%= @kpop.image %>"></p>
		<!-- <p><input class="content_input" type="text" name="content" placeholder="About this kpop"></p> -->
		<input type="submit" value="Update Kpop">

</form>

</div>