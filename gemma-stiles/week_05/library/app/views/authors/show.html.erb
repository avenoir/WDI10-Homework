<h2> <%= @author.name %> </h2>

<ul>
    
    <li><%= image_tag @author.image, :class => 'feature' %> </li>
    <li>Nationality:<%= @author.nationality%></li>
    <li>Date of Birth:<%= @author.dob.strftime "%A, %e %B %Y" if @author.dob%></li>

</ul>

<% @author.books.each do |book| %>
	<%= link_to(image_tag(book.image, :class => 'thumb'), book) %>
<% end %>

<%= link_to'Edit', edit_author_path(@author) %> 
<%= link_to 'Delete',  @author, :method => 'delete', :data => { :confirm => "Are you sure?" } %>